  "sass": "assets/{{{properCase name}}}.scss",
  "exports": {
    ".": {
      "sass": "./assets/{{{properCase name}}}.scss",
      "default": "./src/{{{properCase name}}}.tsx"
    }
  },
  "publishConfig": {
    "main": "dist/{{{properCase name}}}.js",
    "module": "dist/{{{properCase name}}}.mjs",
