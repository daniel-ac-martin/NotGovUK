{
  "name": "@not-govuk/fastify",
  "version": "0.16.3",
  "description": "A customised Fastify server for running websites.",
  "main": "src/index.ts",
  "exports": {
    ".": "./src/index.ts"
  },
  "publishConfig": {
    "main": "dist/index.js",
    "module": "dist/index.mjs",
    "typings": "dist/index.d.ts",
    "exports": {
      ".": {
        "default": "./dist/index.mjs",
        "import": "./dist/index.mjs",
        "require": "./dist/index.js",
        "types": "./dist/index.d.ts"
      }
    }
  },
  "files": [
    "/dist"
  ],
  "scripts": {
    "test": "NODE_OPTIONS=--experimental-vm-modules jest",
    "prepublishOnly": "npm run clean && npm run build",
    "build": "npm run build:esm && npm run build:cjs",
    "build:esm": "tsc -m es2022 && find dist -name '*.js' -exec sh -c 'mv \"$0\" \"${0%.js}.mjs\"' {} \\;",
    "build:cjs": "tsc",
    "clean": "rm -rf dist tsconfig.tsbuildinfo"
  },
  "author": "Daniel A.C. Martin <npm@daniel-martin.co.uk> (http://daniel-martin.co.uk/)",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@fastify/rate-limit": "10.3.0",
    "@not-govuk/fastify-auth": "workspace:*",
    "@not-govuk/fastify-dev-logger": "workspace:*",
    "@not-govuk/fastify-harden": "workspace:*",
    "close-with-grace": "2.4.0",
    "fastify": "5.6.2"
  },
  "devDependencies": {
    "@not-govuk/types-helpers": "workspace:*",
    "jest": "30.2.0",
    "jest-environment-jsdom": "30.2.0",
    "ts-jest": "29.4.6",
    "typescript": "5.9.3"
  }
}
