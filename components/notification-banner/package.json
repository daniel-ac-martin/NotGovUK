{
  "name": "@not-govuk/notification-banner",
  "version": "0.16.3",
  "description": "A component to tell the user about something they need to know about, but thatâ€™s not directly related to the page content.",
  "main": "src/NotificationBanner.tsx",
  "sass": "assets/NotificationBanner.scss",
  "exports": {
    ".": {
      "sass": "./assets/NotificationBanner.scss",
      "default": "./src/NotificationBanner.tsx"
    }
  },
  "publishConfig": {
    "main": "dist/NotificationBanner.js",
    "module": "dist/NotificationBanner.mjs",
    "typings": "dist/NotificationBanner.d.ts",
    "exports": {
      ".": {
        "sass": "./assets/NotificationBanner.scss",
        "types": "./dist/NotificationBanner.d.ts",
        "import": "./dist/NotificationBanner.mjs",
        "require": "./dist/NotificationBanner.js",
        "default": "./dist/NotificationBanner.mjs"
      }
    }
  },
  "files": [
    "/assets",
    "/dist"
  ],
  "scripts": {
    "test": "NODE_OPTIONS=--experimental-vm-modules jest",
    "prepublishOnly": "npm run clean && npm run build",
    "build": "npm run build:esm && npm run build:cjs",
    "build:esm": "tsc -m es2022 && find dist -name '*.js' -exec sh -c 'mv \"$0\" \"${0%.js}.mjs\"' {} \\;",
    "build:cjs": "tsc",
    "clean": "rm -rf dist tsconfig.tsbuildinfo"
  },
  "author": "Daniel A.C. Martin <npm@daniel-martin.co.uk> (http://daniel-martin.co.uk/)",
  "license": "MIT",
  "keywords": [
    "react-components"
  ],
  "dependencies": {
    "@not-govuk/component-helpers": "workspace:*",
    "@not-govuk/sass-base": "workspace:*",
    "govuk-frontend": "5.13.0"
  },
  "peerDependencies": {
    "@not-govuk/docs-components": "^0.16.3",
    "@storybook/addon-docs": "^9.1.17",
    "react": "^19.2.3"
  },
  "peerDependenciesMeta": {
    "@not-govuk/docs-components": {
      "optional": true
    },
    "@storybook/addon-docs": {
      "optional": true
    }
  },
  "devDependencies": {
    "@not-govuk/component-test-helpers": "workspace:*",
    "@not-govuk/tag": "workspace:*",
    "@types/react": "19.2.7",
    "jest": "30.2.0",
    "jest-environment-jsdom": "30.2.0",
    "ts-jest": "29.4.6",
    "typescript": "5.9.3"
  }
}
